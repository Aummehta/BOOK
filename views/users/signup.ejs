 <% layout("/layouts/boilerplate") %>

<div class="signup-container">
    <div class="left-side">
        <i class="fas fa-compass"></i>
        <h3>TravelEase</h3>
    </div>
    <div class="right-side">
        <h2>Sign Up</h2>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="invalid-feedback" style="font-weight: 550;">Please write name</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" class="form-control" required>
                <div class="invalid-feedback" style="font-weight: 550;">Please write email</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="invalid-feedback" style="font-weight: 550;">Enter valid password</div>
            </div>
            <button type="submit" class="btn btn-success">Sign Up</button>
          
        </form>
        <p style="margin-top: 20px; color: white;">Already have an account? <a href="/login" style="color: white; font-size: 18px;">Log in here</a>.</p>
    </div>
</div>

